rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is instructor
    function isInstructor() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'instructor';
    }
    
    // Helper function to check if user is student
    function isStudent() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Avatars - Users can read all, but only write their own
    match /avatars/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Course materials - Only instructors can upload, all authenticated users can read
    match /courses/{courseId}/materials/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isInstructor();
    }
    
    // Assignment files - Only instructors can upload assignment files
    match /courses/{courseId}/assignments/{assignmentId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isInstructor();
    }
    
    // Assignment submissions - Only students can upload their own submissions
    match /courses/{courseId}/assignments/{assignmentId}/submissions/{studentId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isStudent() && request.auth.uid == studentId;
    }
    
    // Default - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
